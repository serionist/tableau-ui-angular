{
    "$schema": "../../node_modules/ng-packagr/ng-package.schema.json",
    "dest": "../../dist/component-library",
    "lib": {
        "entryFile": "src/public-api.ts",
        "styleIncludePaths": [
            "./styles"
        ]
    },
    "allowedNonPeerDependencies": ["tabbable"],
    "assets": [
        {
            "glob": "**/*",
            "input": "./styles",
            "output": "./styles",
            "ignore": ["**/BentonSans-*"]
        }
    ]
}
